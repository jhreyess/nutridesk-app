<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <ImageView
        android:id="@+id/decorator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/adapterTextView"
        app:layout_constraintBottom_toBottomOf="@id/adapterTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_circle_24"
        android:importantForAccessibility="no"
        app:tint="?attr/colorOnPrimary" />

    <TextView
        android:id="@+id/adapterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/decorator"
        tools:text="Lagartijas"
        android:layout_marginStart="8dp"
        style="@style/Body2"/>

</androidx.constraintlayout.widget.ConstraintLayout>