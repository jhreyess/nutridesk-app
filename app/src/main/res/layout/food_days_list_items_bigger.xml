<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/card_day"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="12dp">

    <ImageView
        android:id="@+id/card_day_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="no"
        android:src="@drawable/healthy"
        android:scaleType="centerCrop"
        android:foreground="@drawable/gradient_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="16dp">

        <TextView
            android:id="@+id/card_day_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Headline5"
            android:textColor="@color/white"
            android:text="@string/card_day"
            tools:text="Dia 01" />

        <TextView
            android:id="@+id/card_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Headline6"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Lunes" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>